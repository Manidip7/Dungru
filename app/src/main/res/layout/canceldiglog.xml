<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<!-- faild_image-->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shapeableImageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_failed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <!-- hadding-->
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_submit_successful"
        style="@style/DynamicTextColorStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20dp"
        android:fontFamily="@font/lato_bold"
        android:text="Withdrawal Request Canceled"
        android:textSize="@dimen/_24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shapeableImageView2"
        tools:layout_editor_absoluteX="16dp" />


    <!-- TryAgain-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Transaction_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50dp"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginVertical="@dimen/_10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_rounded_gradiant_color_button_50dp"
        android:elevation="@dimen/_10dp"
        android:fontFamily="@font/lato_bold"
        android:text="Try Again"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="@dimen/_20sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_wallet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent" />

<!--     wallet-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_wallet"
        style="@style/DynamicTextColorStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_55dp"
        android:layout_marginHorizontal="@dimen/_20dp"
        android:layout_marginVertical="@dimen/_60dp"
        android:layout_marginTop="347dp"
        android:backgroundTint="@android:color/transparent"
        android:elevation="@dimen/_10dp"
        android:fontFamily="@font/lato_regular"
        android:text="@string/wallet_faild"
        android:textAllCaps="false"
        android:textSize="@dimen/_20sp"
        app:cornerRadius="@dimen/_50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_submit_successful"
        app:layout_constraintVertical_bias="1.0"
        app:strokeColor="@color/view_grey_color"
        app:strokeWidth="@dimen/_1dp" />


</androidx.constraintlayout.widget.ConstraintLayout>