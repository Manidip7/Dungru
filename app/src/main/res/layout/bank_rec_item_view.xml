<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


            <androidx.cardview.widget.CardView
                android:id="@+id/btn_new_BankAcc"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:layout_marginHorizontal="@dimen/_15dp"
                android:layout_marginVertical="@dimen/_10dp"
                app:cardCornerRadius="@dimen/_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!--Upi card-->
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/btn_bank_transfer_new"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/imgbank_new"
                        android:layout_width="@dimen/_40dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_margin="@dimen/_10dp"
                        android:background="@color/white"
                        android:elevation="@dimen/_10dp"
                        android:scaleType="center"
                        android:src="@drawable/ic_bank"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:shapeAppearance="@style/MyProfileImageShape" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/bank_name"
                        style="@style/DynamicTextColorStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_10dp"
                        android:fontFamily="@font/lato_bold"
                        android:maxLines="1"
                        android:text="@string/Bank_Transfer"
                        android:textSize="@dimen/_18sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/imgbank_new"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>