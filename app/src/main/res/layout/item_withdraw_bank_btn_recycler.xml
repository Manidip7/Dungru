<?xml version="1.0" encoding="utf-8"?><!--First time bank option-->
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btnBankFirstTime"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/_8dp"
    android:layout_marginHorizontal="@dimen/_5dp"
    app:cardElevation="@dimen/_5dp"
    android:onClick="onClick"
    android:background="@drawable/background_selector_and_hover_effect"
    android:elevation="@dimen/_5dp"
    app:cardCornerRadius="@dimen/_16dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/bankListLayout">
    <!--Bank card-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardBackground"
        android:layout_width="@dimen/_130dp"
        android:layout_height="@dimen/_120dp"
        android:paddingVertical="@dimen/_10dp"
        android:paddingHorizontal="@dimen/_5dp"
        android:background="@android:color/transparent">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgBank"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:scaleType="center"
            style="@style/MyProfileImageShape"
            android:src="@drawable/ic_bank"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearance="@style/MyProfileImageShape" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/txtBankName"
            style="@style/DynamicTextColorStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:maxLines="2"
            android:gravity="center"
            android:text="State Bank Of India"
            android:textSize="@dimen/_16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgBank" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>